<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="730.0" prefWidth="1300.0" stylesheets="@HelpScene.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.triviamaze.HelpSceneController">
   <children>
      <Pane fx:id="HelpBackground" prefHeight="730.0" prefWidth="1300.0">
         <children>
            <Label contentDisplay="CENTER" layoutX="360.0" layoutY="123.0" prefHeight="68.0" prefWidth="580.0" text="This is a game that is designed to test your trivia knowledge in order to progess through a series of rooms." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" layoutX="329.0" layoutY="218.0" prefHeight="85.0" prefWidth="643.0" text="You will begin in a room that is connected to other rooms by bridges.  In order to cross a bridge, you must answer a trivia question." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" layoutX="329.0" layoutY="303.0" prefHeight="39.0" prefWidth="643.0" text="If you get the answer correct, you may now move across the bridge freely." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" layoutX="321.0" layoutY="342.0" prefHeight="68.0" prefWidth="643.0" text="However, if you get the answer incorrect, then that bridge breaks, and you must find a different way." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="352.0" layoutY="453.0" prefHeight="39.0" prefWidth="580.0" text="If you reach the exit, then you win!" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" layoutX="329.0" layoutY="492.0" prefHeight="68.0" prefWidth="643.0" text="However, if there is no way for you to progress any further, you lose and you must start a new game." textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Button fx:id="returnToMainMenu" layoutX="553.0" layoutY="611.0" mnemonicParsing="false" onAction="#returnToMainMenu" text="Return to Main Menu">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children></Pane>
   </children>
</VBox>
